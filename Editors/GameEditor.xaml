<UserControl x:Class="WesternLauncherOfEasternOrigins.GameEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WesternLauncherOfEasternOrigins"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <DockPanel Background="#FFBBBBBB">
        <Border DockPanel.Dock="Top" >
            <DockPanel LastChildFill="False" Background="#FF1E730C">
                <Label Content="Game Editor"/>
                <Button Content="New Game" Margin="4" Click="NewGameButton" Width="104"/>
                <Button Content="Delete This Game" Margin="4" Click="DeleteGame" Width="184"/>
                <Button Content="Save All" Margin="4" Click="SaveAll" Width="107"/>
                <ComboBox Width="119" Margin="4">
                    <ComboBoxItem Content="Touhou"/>
                    <ComboBoxItem Content="Fangame"/>
                    <ComboBoxItem Content="Megaman"/>
                    <ComboBoxItem Content="Indie"/>
                    <ComboBoxItem Content="Souls"/>
                    <ComboBoxItem Content="VisualNovel"/>
                </ComboBox>
                <Button Content="Move Up"  Margin="4" Click="MoveGameUp" Width="100"/>
                <Button Content="Move Down"  Margin="4" Click="MoveGameDown" Width="120"/>
            </DockPanel>
        </Border>
        <TreeView Width="400" Background="#FF002517" Name="TheTreeView" SelectedItemChanged="TreeViewSelectedItemChanged" Foreground="White" FontSize="20"/>
        <DockPanel DockPanel.Dock="Left" Background="#FF075A3D" >
            <DockPanel DockPanel.Dock="Top">
                <Border DockPanel.Dock="Left"  Width="200">
                    <DockPanel >
                        <Label Content="Series"/>
                        <TextBox Name="SeriesNameBox" Text="Variable" TextChanged="SeriesNameBoxTextChanged"/>
                    </DockPanel>
                </Border>
                <Border DockPanel.Dock="Left" Width="350" HorizontalAlignment="Left">
                    <DockPanel >
                        <Label Content="Subtitle"/>
                        <TextBox Name="SubtitleNameBox" Text="Variable" TextChanged="SubtitleBoxTextChanged"/>
                    </DockPanel>
                </Border>
                
                
                
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Left">
                <Border DockPanel.Dock="Left" Width="200">
                    <DockPanel >
                        <Label Content="Date"/>
                        <TextBox Name="DateBox" Text="Variable" TextChanged="DateBoxTextChanged"/>
                    </DockPanel>
                </Border>
            </DockPanel>            
            <DockPanel DockPanel.Dock="Top">
                <Border DockPanel.Dock="Left" Width="200">
                    <DockPanel >
                        <Label Content="CodeName"/>
                        <TextBox Text="?????" Name="CodeNameBox" TextChanged="CodeNameBoxTextChanged"/>
                    </DockPanel>
                </Border>
                <Border DockPanel.Dock="Left" Width="250">
                    <DockPanel >
                        <Label Content="Game Type"/>
                        <ComboBox Name="GameTypeCombobox" Text="?????" DropDownClosed="GameTypeDropdownClosed"/>
                    </DockPanel>
                </Border>
                <Border DockPanel.Dock="Left" Width="200" HorizontalAlignment="Left">
                    <DockPanel >
                        <Label Content="Practise"/>
                        <CheckBox Name="PractiseCheckbox" Checked="PractiseModeChecked" Unchecked="PractiseModeUnchecked"/>
                    </DockPanel>
                </Border>
            </DockPanel>

            <DockPanel DockPanel.Dock="Top"  HorizontalAlignment="Left">
                <DockPanel Width="200">
                    <Label Content="Art"/>
                    <TextBox Name="ArtBox" Text="?????" TextChanged="ArtBoxTextChanged"/>
                </DockPanel>
                <DockPanel >
                    <Label Content="Border"/>
                    <Button Name="BorderColorButton" Content=" ????? " Click="SetColorOfBorder" />
                </DockPanel>
                <DockPanel >
                    <Label Content="Back"/>
                    <Button Name="BackColorButton" Content=" ????? " Click="SetColorOfBack" />
                </DockPanel>
                <DockPanel >
                    <Label Content="Text"/>
                    <Button Name="TextColorButton" Content=" ????? " Click="SetColorOfText" />
                </DockPanel>
                <Border BorderThickness="1" BorderBrush="Black">
                    <Border Name="ExampleBorder" BorderThickness="4" BorderBrush="#FFFF7777">
                        <Label Name="ExampleLabel" Content="Example"/>
                    </Border>
                </Border>
                
            </DockPanel>

            <Border DockPanel.Dock="Top">
                
            </Border>
            <Border DockPanel.Dock="Top">
                <DockPanel  >
                    <DockPanel DockPanel.Dock="Left">
                        <Label Content="Desc"/>                        
                    </DockPanel>
                    <TextBox Name="DescriptionBox" DockPanel.Dock="Top" Text="Text" Height="140" TextChanged="DescriptionBoxTextChanged" AcceptsReturn="True" TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto" Width="600" HorizontalAlignment="Left"/>
                    <TextBox Name="GameNoteBox" Text="Text" Height="75" TextChanged="GameNoteBoxTextChanged" AcceptsReturn="True" TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto" Width="600" HorizontalAlignment="Left"/>
                </DockPanel>
            </Border>


            <Border DockPanel.Dock="Top">
                <DockPanel  >
                    <DockPanel DockPanel.Dock="Top" Background="#FF508040" LastChildFill="False">
                        <Label Content="LINKS"/>
                        <Button Content="New Link" Width="100" Margin="2" Click="NewLink"/>
                    </DockPanel>
                    <ScrollViewer >
                        <DockPanel Name="LinksPanel" Background="#FF305030" LastChildFill="False">

                        </DockPanel>
                    </ScrollViewer>



                </DockPanel>
            </Border>

            <Border Name="ModsPanel2" DockPanel.Dock="Top">
                <DockPanel  >
                    <DockPanel DockPanel.Dock="Top" Background="#FF0D378A" LastChildFill="False">
                        <Label Content="Mods for"/>
                        <Label Name="ModsNameLabel"  />
                    </DockPanel>
                    <ScrollViewer >
                        <DockPanel Name="ModsPanel" Background="#FF13324E" LastChildFill="False">

                        </DockPanel>
                    </ScrollViewer>
                    


                </DockPanel>
            </Border>

            

        </DockPanel>
    </DockPanel>
</UserControl>
