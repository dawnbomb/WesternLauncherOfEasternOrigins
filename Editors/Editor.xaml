<Window x:Class="WesternLauncherOfEasternOrigins.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WesternLauncherOfEasternOrigins"
        mc:Ignorable="d"
        Title="Editor" Height="1100" Width="1810">
    <Grid Background="Black">        
        <DockPanel LastChildFill="True">
            <DockPanel Width="1100" DockPanel.Dock="Left">
                <local:GameEditor x:Name="TheGameEditor" DockPanel.Dock="Top" Height="700" />

                <local:AchievementEditor x:Name="TheAchievementEditor" DockPanel.Dock="Top" />
            </DockPanel>


            <local:ModEditor x:Name="TheModEditor" DockPanel.Dock="Left"/>
        </DockPanel>
        
    </Grid>
</Window>
